@using Web.Areas.Admin.Models.Sensors
@model CreatePortableSensorModel
@{
    ViewBag.Title = "Регистрация портативного датчика";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "page-portable-sensor-create";
}
<div class="row">
    <div class="offset-md-4 col-md-4 offset-sm-2 col-sm-6">
        <div class="card">
            <div class="card-body">
                <section id="loginForm">
                    @using (Html.BeginForm("CreatePortableSensor", "Sensors", new { area = "Admin", ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, null, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(m => m.ApiKey)
                            @Html.TextBoxFor(m => m.ApiKey, new { @class = "form-control", @readonly = true })
                            @Html.ValidationMessageFor(m => m.ApiKey, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Зарегистрировать датчик" class="btn btn-success" />
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts  {
    <script>
        jQuery(function ($) {
            $("#ApiKey").trigger("change");
        });
    </script>
}