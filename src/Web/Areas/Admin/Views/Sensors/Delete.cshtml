@model Web.Areas.Admin.Models.Default.Sensors.DeleteSensorViewModel
@{
    ViewBag.Title = "Подтверждение удаления";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "page-sensor-delete";
}
<div class="row">
    <div class="offset-md-1 col-md-4 col-sm-12">
        <partial name="Partials/SensorDetails" model="Model.Details" />
    </div>
    <div class="offset-md-1 col-md-4 col-sm-12">
        <div class="card">
            <div class="card-body">
                <section id="loginForm">
                    @using (Html.BeginForm("Delete", "Sensors", new { area = "Admin", ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, null, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(f => f.Model.Id)
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <label>Удалить совсем?</label>
                                <input type="checkbox" name="isCompletely" value="true" class="btn btn-danger" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Удалить" class="btn btn-danger" />
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
</div>