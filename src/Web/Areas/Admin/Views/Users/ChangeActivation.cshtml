@using Web.Areas.Admin.Models.Users
@model ActivateUserViewModel
@{
    ViewBag.Title = "Активация/Деактивация пользователя";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "page-user-activation";
}
<div class="row">
    <div class="offset-md-4 col-md-4 offset-sm-2 col-sm-6">
        <div class="card">
            <div class="card-body">
                <section id="loginForm">
                    @using (Html.BeginForm("ChangeActivation", "Users", new { area = "Admin", ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, null, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(f => f.Model.Id)
                        <div class="form-group">
                            @Html.LabelFor(m => m.Model.IsActive)
                            @Html.CheckBoxFor(m => m.Model.IsActive, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Model.IsActive, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Сохранить" class="btn btn-success" />
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
</div>