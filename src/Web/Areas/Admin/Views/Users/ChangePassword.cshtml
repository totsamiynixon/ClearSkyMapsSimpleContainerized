@model Web.Areas.Admin.Models.Default.Users.UserChangePasswordViewModel
@{
    ViewBag.Title = "Смена пароля";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Page = "page-user-change-password";
}
<div class="row">
    <div class="offset-md-4 col-md-4 offset-sm-2 col-sm-6">
        <div class="card">
            <div class="card-body">
                <section id="loginForm">
                    @using (Html.BeginForm("ChangePassword", "Users", new { area = "Admin", ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, null, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(f => f.Model.Id)
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", disabled = true })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Model.Password)
                            @Html.PasswordFor(m => m.Model.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Model.ConfirmPassword)
                            @Html.PasswordFor(m => m.Model.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Model.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Сменить пароль" class="btn btn-success" />
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
</div>